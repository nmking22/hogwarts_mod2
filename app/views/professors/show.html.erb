<h1><%= @professor.name %></h1>

<section id='professor-student-info'>
  <% sorted_students = @professor.students.sort_by { |student| student.name } %>

  <% sorted_students.each do |student| %>
    <p><%= student.name %></p>
  <% end %>
</section>

<section id='average-age'>
  <% total_age = @professor.students.sum { |student| student.age }%>
  <p><%= "Average Age: #{(total_age.to_f / @professor.students.length).round(1)}" %></p>
</section>
